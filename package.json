{
  "name": "@peniti/filament-calendar",
  "private": "true",
  "description": "FullCalendar.js integration for Filament panels",
  "type": "module",
  "scripts": {
    "build:scripts": "node esbuild.js",
    "build:styles": "npx @tailwindcss/cli -c tailwind.config.ts -i resources/css/filament-calendar.css -o dist/filament-calendar.css",
    "build": "npm-run-all -n -s build:*",
    "lint:styles": "stylelint \"resources/**/*.css\"",
    "lint:scripts": "eslint",
    "lint": "npm-run-all -n -s lint:*",
    "start": "npm-run-all -n -p 'build:* -- --watch'"
  },
  "keywords": [
    "filament",
    "calendar",
    "fullcalendar"
  ],
  "author": {
    "name": "Simone Peniti",
    "email": "simone@peniti.it"
  },
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/google-calendar": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/luxon3": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@gitlab-formatters/eslint-formatter-gitlab": "^1.0.1",
    "@gitlab-formatters/stylelint-formatter-gitlab": "^1.0.2",
    "@shufo/prettier-plugin-blade": "^1.16.1",
    "@tailwindcss/cli": "^4.1.14",
    "@types/alpinejs": "^3.13.11",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier-plugin-css-order": "^2.1.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
